
<table id="restaurants">
  <thead>
    <tr>
      <th id="name"> Name </th>
      <th id="address">Address</th>
      <th id="last_inspection" > Last Inspection </th>
      <th id="failing_audits" > Failing Inspections </th>
    </tr>
  </thead>
  <tbody>
  <% @restaurants.each do |resto| %>
    <tr>
      <td> <%= link_to resto.name, resto %> </td>
      <td> <%= resto.address %> </td>
      <td> <%= latest_audit_date( resto ) %> </td>
      <td> <%= resto.failing_audits.count %></td>
    </tr>
  <% end %>
  </tbody>
</table>
